{
  "manifest_version": 3,
  "name": "Input Value Viewer",
  "version": "1.0",
  "description": "Display specific HTML input element value",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}